<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.material.materialmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/material"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="icon">

        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.collect.GetOrderActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.collect.PlanActivityForCollect"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.produce.ReCheckMaterialProcessActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.produce.BlenderProcessActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.ScanBarCodeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.produce.ScanOrderActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.collect.OrderListActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.collect.PrintOrderQRCodeActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.collect.MaterialProcessActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.produce.PlanActivityForProduce"
            android:launchMode="singleTask" />

    </application>

</manifest>
